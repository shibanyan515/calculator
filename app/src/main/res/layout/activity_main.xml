<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/zero"
        android:layout_width="80dp"
        android:layout_height="92dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="4dp"
        android:text="0"
        android:textSize="30dp"
        android:backgroundTint="#333333"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/point"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/point"
        android:layout_width="80dp"
        android:layout_height="92dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:text="・"
        android:textSize="30dp"
        android:backgroundTint="#333333"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/del"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/zero" />

    <Button
        android:id="@+id/del"
        android:layout_width="80dp"
        android:layout_height="92dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:text="del"
        android:textSize="23dp"
        android:backgroundTint="#333333"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/equal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/point" />

    <Button
        android:id="@+id/equal"
        android:layout_width="80dp"
        android:layout_height="92dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:text="="
        android:textSize="30dp"
        android:backgroundTint="#0000ff"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/del" />

    <Button
        android:id="@+id/one"
        android:layout_width="80dp"
        android:layout_height="92dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:text="1"
        android:textSize="30dp"
        android:backgroundTint="#333333"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/zero"
        app:layout_constraintEnd_toStartOf="@+id/two"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/two"
        android:layout_width="80dp"
        android:layout_height="92dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="2"
        android:textSize="30dp"
        android:backgroundTint="#333333"
        app:cornerRadius="100dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/one"
        app:layout_constraintEnd_toStartOf="@+id/three"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/one" />

    <Button
        android:id="@+id/three"
        android:layout_width="80dp"
        android:layout_height="92dp"
        app:cornerRadius="100dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="3"
        android:textSize="30dp"
        android:backgroundTint="#333333"
        app:layout_constraintBaseline_toBaselineOf="@+id/one"
        app:layout_constraintEnd_toStartOf="@+id/plus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/two" />

    <Button
        android:id="@+id/plus"
        android:layout_width="80dp"
        android:layout_height="92dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="+"
        android:textSize="30dp"
        android:backgroundTint="#4169e1"
        app:cornerRadius="100dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/three" />

    <Button
        android:id="@+id/four"
        android:layout_width="80dp"
        android:layout_height="92dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:text="4"
        android:textSize="30dp"
        android:backgroundTint="#333333"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/one"
        app:layout_constraintEnd_toStartOf="@+id/five"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/five"
        android:layout_width="80dp"
        android:layout_height="92dp"
        app:cornerRadius="100dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="5"
        android:textSize="30dp"
        android:backgroundTint="#333333"
        app:layout_constraintBaseline_toBaselineOf="@+id/four"
        app:layout_constraintEnd_toStartOf="@+id/six"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/four" />

    <Button
        android:id="@+id/six"
        android:layout_width="80dp"
        android:layout_height="92dp"
        app:cornerRadius="100dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="6"
        android:textSize="30dp"
        android:backgroundTint="#333333"
        app:layout_constraintBaseline_toBaselineOf="@+id/four"
        app:layout_constraintEnd_toStartOf="@+id/minus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/five" />

    <Button
        android:id="@+id/minus"
        android:layout_width="80dp"
        android:layout_height="92dp"
        app:cornerRadius="100dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="-"
        android:textSize="30dp"
        android:backgroundTint="#4169e1"
        app:layout_constraintBaseline_toBaselineOf="@+id/four"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/six" />

    <Button
        android:id="@+id/seven"
        android:layout_width="80dp"
        android:layout_height="92dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:text="7"
        android:textSize="30dp"
        android:backgroundTint="#333333"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/four"
        app:layout_constraintEnd_toStartOf="@+id/eight"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/eight"
        android:layout_width="80dp"
        android:layout_height="92dp"
        app:cornerRadius="100dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="8"
        android:textSize="30dp"
        android:backgroundTint="#333333"
        app:layout_constraintBaseline_toBaselineOf="@+id/seven"
        app:layout_constraintEnd_toStartOf="@+id/nine"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/seven" />

    <Button
        android:id="@+id/nine"
        android:layout_width="80dp"
        android:layout_height="92dp"
        app:cornerRadius="100dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="9"
        android:textSize="30dp"
        android:backgroundTint="#333333"
        app:layout_constraintBaseline_toBaselineOf="@+id/seven"
        app:layout_constraintEnd_toStartOf="@+id/mul"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/eight" />

    <Button
        android:id="@+id/mul"
        android:layout_width="80dp"
        android:layout_height="92dp"
        app:cornerRadius="100dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="×"
        android:textSize="30dp"
        android:backgroundTint="#4169e1"
        app:layout_constraintBaseline_toBaselineOf="@+id/seven"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nine" />

    <Button
        android:id="@+id/ac"
        android:layout_width="80dp"
        android:layout_height="92dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:text="AC"
        android:textSize="30dp"
        app:cornerRadius="100dp"
        android:backgroundTint="#006400"
        app:layout_constraintBottom_toTopOf="@+id/seven"
        app:layout_constraintEnd_toStartOf="@+id/bracketLeft"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bracketLeft"
        android:layout_width="80dp"
        android:layout_height="92dp"
        app:cornerRadius="100dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="("
        android:textSize="30dp"
        android:backgroundTint="#4169e1"
        app:layout_constraintBaseline_toBaselineOf="@+id/ac"
        app:layout_constraintEnd_toStartOf="@+id/bracketRight"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ac" />

    <Button
        android:id="@+id/bracketRight"
        android:layout_width="80dp"
        android:layout_height="92dp"
        app:cornerRadius="100dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text=")"
        android:textSize="30dp"
        android:backgroundTint="#4169e1"
        app:layout_constraintBaseline_toBaselineOf="@+id/ac"
        app:layout_constraintEnd_toStartOf="@+id/div"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bracketLeft" />

    <Button
        android:id="@+id/div"
        android:layout_width="80dp"
        android:layout_height="92dp"
        app:cornerRadius="100dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="÷"
        android:textSize="30dp"
        android:backgroundTint="#4169e1"
        app:layout_constraintBaseline_toBaselineOf="@+id/ac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bracketRight" />

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/frame_style"
            android:text=""
            android:textSize="60dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>